@model Customer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .rd {
        margin-left: 5px;
    }

    .rowRD {
        margin-right: 46px;
    }

    #Register {
        display: none;
    }

    #Next {
        pointer-events: none;
        font-family: 'shahd-bold';
        color: #fff;
        width: 100px;
        background-color: #009688;
        opacity: 0.5;
    }

    #Ok {
        font-family: 'shahd-bold';
        margin-left: 10px;
    }

    .labelOk {
        font-family: 'shahd-bold';
        text-align: initial;
        margin-bottom: 10px;
    }

    li {
        list-style: none;
    }

    p {
        font-family: 'Changa', sans-serif;
        font-size: 14px;
        text-align: initial;
    }

    .ULTerms {
        margin-top: 5px;
        margin-bottom: 34px;
        border-bottom: 1px solid #e5e3e3;
    }

    @@media screen and (max-width:400px) {
        .rowRD {
            margin-right: 3px;
        }
    }
</style>

<div class="container" style="padding-top:70px; margin-bottom:100px; z-index:-1;">

    <form class=" WhiteBacground font" dir="rtl" asp-action="Edit" method="post">
  
        <div>
            <div class="row">
                <div class="col-12 text-right">
                    <br />
                    <h3 class="txtCO">حسابي</h3>
                    <br />

                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)



            <div class="row text-right" style="padding-right:20px; padding-top:20px;">
                <div class="col-md-2 col-sm-12 col-lg-2">
                    <label asp-for="Name" class="col-form-label font" style="font-size:15px"></label>
                </div>
                <div class="col-md-5 col-sm-12 col-lg-5">
                    <input class="text form-control" asp-for="Name" />
                    <span class="text-danger" data-valmsg-replace="true" asp-validation-for="Name"></span>
                </div>
            </div>


            @* Phone1 *@
            <div class="row text-right" style="padding-right:20px; padding-top:20px;">
                <div class="col-md-2 col-sm-12 col-lg-2">
                    <label asp-for="Phone1" class="col-form-label font" style="font-size:15px"></label>
                </div>
                <div class="col-md-5 col-sm-12 col-lg-5">
                    <input class="text form-control" asp-for="Phone1" />
                    <span class="text-danger" data-valmsg-replace="true" asp-validation-for="Phone1"></span>

                </div>
            </div>

            @* Phone2 *@
            <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
                <div class="col-md-2 col-sm-12 col-lg-2">
                    <label asp-for="Phone2" class="col-form-label font" style="font-size:15px"></label>
                </div>
                <div class="col-md-5 col-sm-12 col-lg-5">
                    <input class="text form-control" asp-for="Phone2" />
                </div>
            </div>

            @* Address *@
            <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
                <div class="col-md-2 col-sm-12 col-lg-2">
                    <label asp-for="Address" class="col-form-label font" style="font-size:15px"></label>
                </div>
                <div class="col-md-5 col-sm-12 col-lg-5">
                    <input class="text form-control" asp-for="Address" />
                    <span class="text-danger" data-valmsg-replace="true" asp-validation-for="Address"></span>
                </div>
            </div>


            <div class="row" style="padding-right:20px; padding-top:20px;">
                <div class="col-lg-2 col-md-2">

                </div>
                <div class="col-md-5 col-sm-12 col-lg-5">
                    <div class="row">
                        <div class="col-6">
                            <a class="btn-secondary form-control" asp-area="Customer" asp-controller="Home" asp-action="Index" style="text-align:center;text-decoration:none">رجوع</a>
                        </div>
                        <div class="col-6">
                            <input type="submit" class="btn-primary form-control" value="حفظ" style="text-align:center;" />
                            @*<button type="submit" class="btn btn-primary">Register</button>*@

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

