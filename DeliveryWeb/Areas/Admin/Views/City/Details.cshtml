        <div class="row">
            <div class="col-12 text-right">
                <br />
                <h4 class="cnt">اسعار التوصيل</h4>
                <br />
            </div>
            <div class="col-12 row1" style="margin-right: 29px;">
                <div class="col-8 col-md-4  text-left" style="margin-bottom: 20px;">

                    <a class=" btn btn-primary text-white form-control" style="text-align:center; font-family: 'shahd-bold';padding-top:8px;margin-bottom:10px" asp-area="Admin" asp-controller="City" asp-action="Add" asp-route-code="@Model.Code"><i class="fas fa-plus"></i> &nbsp;اضافة مدينة</a>
                    <a class=" btn-secondary form-control" asp-controller="City" asp-action="Index" style="text-align:center; text-decoration:none ;  font-family: 'shahd-bold';">رجوع</a>

                </div>
                <div class="col-4 col-md-8 text-right">
                    <h4 style="margin-right: -40px;">فرع @Model.BrunshName </h4>

