            </div>
        </div>
        <div>
            @if (Model.Cities.Count() == 0)
            {
                <div class="text-danger text-right">لايوجد مدن . . .</div>
            }
            else
            {
                <div class="roco row bg-secondary text-white text-right " style="font-size:small;">
                    <div class="col-4 padding">
                        @Html.DisplayNameFor(m => m.Cities.First().CityName)
                    </div>

                    <div class="col-3 padding">
                        @Html.DisplayNameFor(m => m.Cities.First().PriceMen)
                    </div>

                    <div class="col-5 padding">
                    </div>
                </div>

                @foreach (var item in Model.Cities)
                {
                    <div class="row border-bottom" style="font-size:small;">
                        <div class="col-4 padding text-right">
                            @Html.DisplayFor(m => item.CityName)
                        </div>

                        <div class="col-3 padding text-right">
                            @Html.DisplayFor(m => item.PriceMen)
                        </div>

                        <div class="col-5 padding text-left">
                            <a class="btn btn-success" asp-area="Admin" asp-controller="City" asp-action="Edit" asp-route-id="@item.ID_City"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="City" asp-action="Delete" asp-route-id="@item.ID_City"><i class="far fa-trash-alt"></i></a>
                        </div>

                    </div>
                }
                <div class=" padding text-left">
                </div>

            }

