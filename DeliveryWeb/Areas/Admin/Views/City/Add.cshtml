@model City_Province
@{
    ViewData["Title"] = "Add";
}
<div class="container" style="padding-top:70px; margin-bottom:100px; z-index:-1;">
    <form class=" WhiteBacground font" dir="rtl" method="post" asp-action="Add">
        <div class="row">
            <div class="col-12 text-right">
                <br />
                <h3 class="txtCO">اضافة مدينة</h3>
                <br />

            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* CityName *@
        <div class="row text-right" style="padding-right:20px">
            <div id="di" class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.CityName" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.CityName" />
                <span class="text-danger" data-valmsg-replace="true" asp-validation-for="City.CityName"></span>
            </div>
        </div>

        @* PriceMen *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px;">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.PriceMen" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.PriceMen" />
                <span class="text-danger" data-valmsg-replace="true" asp-validation-for="City.PriceMen"></span>
            </div>
        </div>

        @* PriceMen *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.Province" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                @*<input class="text form-control" asp-for="City" />
                *@
                <select id="ddlCities" class="form-control" asp-for="City.ID_Province" asp-items="@(new SelectList(Model.Provinces,"ID_Province","ProvinceName"))"></select>
                <span class="text-danger" asp-validation-for="City.ID_Province"></span>
            </div>
        </div>

        @* Brunsh *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.Brunsh" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="Code" readonly />
            </div>
        </div>

        @* Days *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.Days" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.Days" />
                <span class="text-danger" asp-validation-for="City.Days"></span>
            </div>
        </div>



        @* Buttons *@
        <div class="row" style="padding-right:20px; padding-top:20px;">
            <div class="col-lg-2 col-md-2">

            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <div class="row">
                    <div class="col-6">
                        <a class="btn-secondary form-control" asp-action="Index" style="text-align:center;">رجوع</a>
                    </div>
                    <div class="col-6">
                        <input type="submit" class="btn-success form-control" value="حفظ المدينة" style="text-align:center;text-decoration:none" />
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }

