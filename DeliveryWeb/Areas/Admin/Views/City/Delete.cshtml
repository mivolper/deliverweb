@model City_Province
@{
    ViewData["Title"] = "Delete";
}
<div class="container" style="padding-top:70px; margin-bottom:100px; z-index:-1;">
    <form class=" WhiteBacground font" dir="rtl" method="post" asp-action="Delete">
        <div class="row">
            <div class="col-12 text-right">
                <br />
                <h3 class="txtCO">حذف المدينة</h3>
                <br />

            </div>
        </div>

        @Html.HiddenFor(m => m.City.ID_City)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* CityName *@
        <div class="row text-right" style="padding-right:20px">
            <div id="di" class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.CityName" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.CityName" readonly />
            </div>
        </div>

        @* PriceMen *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px;">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.PriceMen" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.PriceMen" readonly />
            </div>
        </div>

        @* Province *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.Province" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.Province.ProvinceName" readonly />
            </div>
        </div>

        @* Brunsh *@
        <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.Brunsh" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.Brunsh" readonly />
            </div>
        </div>


        <div class="row text-right" style="padding-right:20px; padding-top:20px; ">
            <div class="col-md-2 col-sm-12 col-lg-2">
                <label asp-for="City.Days" class="col-form-label font" style="font-size:15px"></label>
            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <input class="text form-control" asp-for="City.Days" readonly />
            </div>
        </div>


        @* Buttons *@
        <div class="row" style="padding-right:20px; padding-top:20px;">
            <div class="col-lg-2 col-md-2">

            </div>
            <div class="col-md-5 col-sm-12 col-lg-5">
                <div class="row">
                    <div class="col-6">
                        <a class="btn-secondary form-control" asp-action="Index" style="text-align:center;text-decoration:none">رجوع</a>
                    </div>
                    <div class="col-6">
                        <input type="submit" class="btn-danger form-control" value="حذف" style="text-align:center;" />
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
