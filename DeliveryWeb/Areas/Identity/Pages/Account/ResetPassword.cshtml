@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<style>
    .mb {
       
        text-align: initial;
        font-family: 'shahd-bold';
        font-size: 25px;
    }
    .bb {
        background-color: #009688;
        font-family: 'shahd-bold';
        color: #fff;
       
    }
</style>
<div class="container" style="padding-top:70px; margin-bottom:100px;">
    <form class=" WhiteBacground font " dir="rtl" method="post">
        <h1 class="mb"> تغيير كلمة السر</h1>
        <hr />
        <div class="row">
            <div class="col-md-4" style="text-align: initial;">
            
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="الرجاء ادخال ايميلك" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="كلمة السر" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="تأكيد كلمة السر" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="bb btn ">التالي</button>
              
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
