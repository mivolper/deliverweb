                        </div>
                    </li>
                }

            </ul>


        </nav>

    </div>


    <script>
        var menubtn = document.getElementById("menubtn");
        var sideNav = document.getElementById("sideNav");
        var menu = document.getElementById("menu");
        var cancle = document.getElementById("cancle");
        var navbarDropdown = document.getElementById("navbarDropdown");
        var itmAdd = document.getElementById("itmAdd");
        var itmMove = document.getElementById("itmMove"); 
        var mar = document.getElementById("mar");
        
        menubtn.onclick = function () {
            if (sideNav.style.left == "-250px") {
                sideNav.style.left = "0";
                menu.style.display = "none";
                cancle.style.left = "200px";

            }
            else {
                sideNav.style.left = "0px";
                menu.style.display = "none";
                cancle.style.left = "200px";
            }

        }
        cancle.onclick = function () {
            if (sideNav.style.left == "-200px") {
                sideNav.style.left = "0";
                menu.style.display = "none";
                cancle.style.left = "200px";

            }
            else {
                sideNav.style.left = "-250px";
                menu.style.display = "block";
                cancle.style.left = "-200px";
            }
        }
        navbarDropdown.onclick = function () {
            if (navbarDropdown.style.marginBottom == "100px") {
                navbarDropdown.style.marginBottom = "-10px";
                navbarDropdown.style.transition = "0.1s";
            }
            else {
                navbarDropdown.style.marginBottom = "100px";
                navbarDropdown.style.transition = "0.1s";
            }
        }

        itmAdd.onclick = function () {
            if (navbarDropdown.style.marginBottom == "100px") {
                navbarDropdown.style.marginBottom = "-10px";
                navbarDropdown.style.transition = "0.1s";
            }
        }
        itmMove.onclick = function () {
            if (navbarDropdown.style.marginBottom == "100px") {
                navbarDropdown.style.marginBottom = "-10px";
                navbarDropdown.style.transition = "0.1s";
            }
        }
      
    </script>
