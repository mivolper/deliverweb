    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            text-decoration: none;
        }
        body {
            background-color: #c0d7d5;
        }
        .bsnner-text {
            text-align: center;
            color: #fff;
            padding-top: 180px;
        }

            .bsnner-text h1 {
                font-size: 80px;
                font-family: 'Kaushan Script', cursive;
            }

            .bsnner-text p {
                font-size: 20px;
                font-family: 'shahd-bold';
            }

        .banner-btn {
            margin: 70px auto 0px;
        }

            .banner-btn a {
                width: 150px;
                text-decoration: none;
                margin: 0 10px;
                padding: 12px 0;
                display: inline-block;
                color: #fff;
                border: .5px solid #fff;
                z-index: 1;
                position: relative;
                transition: color 0.5s;
                font-family: 'shahd-bold';
            }

                .banner-btn a span {
                    width: 0px;
                    height: 100%;
                    position: absolute;
                    top: 0;
                    left: 0;
                    background: #fff;
                    z-index: -1;
                    transition: 0.5s;
                }

        /*  .banner-btn a:hover span {
                    width: 100%;
                }

                .banner-btn a:hover {
                    color: #009688;
                }*/

        #sideNav {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: -250px;
            top: 0;
            background: rgba(0,0,0,0.5);
            transition: 0.5s;
            z-index: 4;
        }

        nav ul li {
            list-style: none;
            margin: 30px 20px;
            color: #fff;
        }

        .marg {
            list-style: none;
            color: #fff;
            margin-left: -12px;
            margin-bottom: -13px;
        }
     
        nav ul li a {
            text-decoration: none;
            color: #fff;
            transition: 0.8s;
            font-family: 'shahd-bold';
        }

        .blak {
            text-decoration: none;
            color: #212529;
            transition: 0.8s;
            padding: 12px;
        }

        #menubtn {
            width: 50px;
            height: 50px;
            position: fixed;
            right: 30px;
            top: 20px;
            text-align: center;
            cursor: pointer;
            border-radius: 3px;
            z-index:3;
        }

        #menu {
            top: 25px;
            font-size: 35px;
            color: black;
            padding: 6px 12px;
            transition: all .5s;
            background: #009688;
            border-radius: 3px;
            opacity: 0.9;
            position: fixed;
            left: 40px;
        }

        .drp:hover {
            padding-left: 20px;
            color: #009688 !important;
            text-decoration: none;
        }

        .blak {
            text-decoration: none;
        }

        ul {
            margin-top: 37px;
        }

        #cancle {
            position: fixed;
            left: -200px;
            top: 40px;
            color: white !important;
            font-size: 30px;
            transition: 0.5s;
        }

        .dropdown-menu {
            background: none;
            border: none;
        }

        .dropdown-item {
            color: #fff;
        }

        @@media screen and (max-width:770px) {
            .bsnner-text h1 {
                font-size: 44px;
            }
            .bx {
                font-size:9px;
            }
             .banner-btn a {
                display: block;
                margin: 20px auto;
            }
        }
        .WhiteBacground {
            background-color: #fff;
            border: solid 4px #009688!important;
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 30px;
        }
        .font {
            font-family: 'shahd-bold';
            font-size: 18px;
        }
        .txtCO {
            color: #050404;
            font-family: 'shahd-bold';
        }
        .form-control {
            font-family: 'Changa', sans-serif;
       
        }
        .roco {
            background-color: #009688 !important;
            color: white;
        }
        .padding {
            padding-top: 10px;
            padding-bottom: 10px;
            font-family: 'Changa', sans-serif;
            font-size: 15px;
        }
        .footer {
            background-color: #009688 !important;
            font-family: 'shahd-bold';
            color: white;
        }
        .name {
            margin-bottom: -2rem;
            font-family: 'Changa', sans-serif;
        }
        .code {
            margin-bottom: 3rem;
            font-family: 'Changa', sans-serif;
            border-bottom: 1px solid #e5e3e3;
        }
    </style>

</head>
